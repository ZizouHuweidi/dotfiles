#!/usr/bin/env bash

READER="ghostty -e zathura"

# An array of options to choose.
# You can edit this list to add/remove config files.
declare -a options=(
  "The Holy Quran - $HOME/Documents/books/deen/Holy_Quran_Full.pdf"
  "The Sealed Nectar - $HOME/Documents/books/deen/English_ArRaheeq_AlMakhtum_THE_SEALED_NECTAR.pdf"
  "Al Nawawi 40 Hadith - $HOME/Documents/books/deen/al-nawawi.pdf"
  "Designing Data Intensive Application - $HOME/Documents/books/tech/ddia.pdf"
  "High Performance Browser Networking - $HOME/Documents/books/tech/high_performance_browser_networking.pdf"
  "PostgreSQL Query Optimization - $HOME/Documents/books/tech/postgre_query_optimization.pdf"
  "Database Internals - $HOME/Documents/books/tech/database_internals.pdf"
  "The Brothers of Karamazov - $HOME/Documents/books/general/the_brothers_karamazov.epub"
  "The Princes of the Yen - $HOME/Documents/books/general/princes_of_the_yen.pdf"
  "The Fiat Standard - $HOME/Documents/books/general/The_Fiat_Standard.pdf"
  "The Bitcoin Standard - $HOME/Documents/books/general/The_Bitcoin_Standard.epub"
  # "quit"
)

# Piping the above array into dmenu.
# We use "printf '%s\n'" to format the array one item to a line.
choice=$(printf '%s\n' "${options[@]}" | rofi -dmenu -i 20 -p 'Choose Book')

# What to do when/if we choose 'quit'.
if [[ "$choice" == "quit" ]]; then
  echo "Program terminated." && exit 1

# What to do when/if we choose a file to edit.
elif [ "$choice" ]; then
  cfg=$(printf '%s\n' "${choice}" | awk '{print $NF}')
  $READER "$cfg"

# What to do if we just escape without choosing anything.
else
  echo "Program terminated." && exit 1
fi
