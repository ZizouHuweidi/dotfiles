bindsym $mod+Control+c exec cliphist list | rofi -dmenu -p "Clipboard:" | cliphist decode | wl-copy
bindsym $mod+e exec  rofimoji -a copy
bindsym $mod+x exec rofi -show power-menu -modi power-menu:~/.local/bin/rofi-power-menu -theme-str 'window {width: 12em;} listview {lines: 6;}'
bindsym $mod+Control+b exec ~/.local/bin/books
bindsym $mod+Control+d exec ~/.local/bin/configs

# ==================== Display Mirroring ====================

# Quick mirror commands (direct wl-mirror for reliability)
bindsym $mod+F10 exec "wl-mirror --fullscreen-output HDMI-A-1 eDP-1"
bindsym $mod+Shift+F10 exec "wl-mirror --show-cursor --fullscreen-output HDMI-A-1 eDP-1"
bindsym $mod+Ctrl+F10 exec "wl-mirror -r $(slurp) --fullscreen-output HDMI-A-1 eDP-1"
bindsym $mod+Alt+F10 exec "killall wl-mirror"

# Alternative: Mod+Ctrl+p for quick mirror (backward compatible)
bindsym $mod+Control+p exec wl-present mirror

# Interactive presentation mode
bindsym $mod+Shift+p mode "present"

mode "present" {
    # Start mirroring to selected output
    bindsym m exec wl-present mirror; mode "default"
    
    # Select which output to mirror TO (e.g., HDMI-A-1)
    bindsym o exec wl-present set-output; mode "default"
    
    # Select region to mirror (for privacy)
    bindsym r exec wl-present set-region; mode "default"
    
    # Unset region (mirror full output)
    bindsym Shift+r exec wl-present unset-region; mode "default"
    
    # Set scaling mode (fit/stretch/cover)
    bindsym s exec wl-present set-scaling; mode "default"
    
    # Toggle freeze (pause mirroring)
    bindsym f exec wl-present toggle-freeze; mode "default"
    
    # Custom wl-mirror options
    bindsym c exec wl-present custom; mode "default"
    
    # Stop mirroring and exit mode
    bindsym q exec killall wl-mirror; mode "default"
    
    # Exit mode without stopping
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+Shift+p mode "default"
}

# GUI display configuration
bindsym $mod+Ctrl+Shift+d exec wdisplays

# -- Function keys --
# Volume controls with Fedora Sway volume helper
bindsym --locked XF86AudioRaiseVolume exec $volume_helper_cmd --limit 100 --increase 5
bindsym --locked XF86AudioLowerVolume exec $volume_helper_cmd --limit 100 --decrease 5
bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle && $volume_helper_cmd
bindsym --locked XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness controls with brightnessctl
bindsym --locked XF86MonBrightnessUp exec brightnessctl set +5%
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-

# # Capslock (If you don't want to use the backend)
# bindsym --release Caps_Lock exec swayosd-client --caps-lock
bindsym XF86AudioPrev 			exec "playerctl previous"
bindsym XF86AudioNext 			exec "playerctl next"
bindsym XF86AudioPause 			exec "playerctl play-pause"

bindsym $mod+F5			exec "playerctl previous"
bindsym $mod+F6			exec "playerctl next"
bindsym $mod+F8 			exec "playerctl play-pause"

bindsym $mod+XF86AudioLowerVolume 			exec "playerctl previous"
bindsym $mod+XF86AudioRaiseVolume 			exec "playerctl next"
bindsym $mod+XF86AudioMute 			exec "playerctl play-pause"


# -- Screenshots --
# Screenshot whole screen
bindsym Print exec grim -t png $HOME/Pictures/Screenshots/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')

# Screenshot region of screen
bindsym $mod+Print exec grim -g "$(slurp)" -t png - | swappy -f -
# bindsym $mod+Print exec slurp | grim -t png -g - $HOME/Pictures/Screenshots/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')

# Save screenshot to clipboard
bindsym $alt+Print exec grim -g "$(slurp)" -t png - | wl-copy -t image/png

# Screenshot current window
# bindsym $alt+Print exec swaymsg -t get_tree | jq -r '.. | select(.pid? and .visible?) | .rect | "\(.x),\(.y) \(.width)x\(.height)"' | slurp | grim -t png -g - $HOME/Pictures/Screenshots/Screenshot_2022-07-25-13-30-16_1366x768.png/$(date +'screenshot_%Y-%m-%d-%H%M%S.png')

# Parse text on screen and copy to clipboard
bindsym Ctrl+Print exec ~/.local/bin/screentext

