bindsym $alt+Left workspace prev
bindsym $alt+l workspace next
bindsym $alt+h workspace prev
bindsym $mod+Tab workspace back_and_forth
bindsym --whole-window {
    $mod+button4 workspace prev
    $mod+button5 workspace next
}

# switch to workspace
